// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "pip3 install --user -r requirements.txt",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				// 🐍 Core Python development
				"ms-python.python",
				"ms-python.vscode-pylance",

				// 📘 Jupyter & notebooks
				"ms-toolsai.jupyter",
				"ms-toolsai.jupyter-keymap",
				"ms-toolsai.jupyter-renderers",
				"ms-toolsai.vscode-jupyter-cell-tags",
				"ms-toolsai.vscode-jupyter-slideshow",

				// 🧹 Linting & formatting
				"ms-python.black-formatter",
				"ms-python.isort",
				"charliermarsh.ruff", // Fast Python linter & formatter

				// 🧪 Testing
				"LittleFoxTeam.vscode-python-test-adapter",
				"ms-python.test-adapter",

				// 🧰 General utilities
				"visualstudioexptteam.vscodeintellicode",
				"mhutchie.git-graph",
				"eamodio.gitlens",
				"tamasfe.even-better-toml", // For pyproject.toml
				"ms-azuretools.vscode-docker", // For Docker support
				"ms-vscode.remote-containers" // For devcontainers support
			]
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
